{
	"version": "2.0.0",
	"tasks": [
		// ========================================
		// AUTO-START ON FOLDER OPEN
		// Modified: 2026-02-06T23:30:00Z | Author: COPILOT | Change: Auto-start dashboard + GitHub runner on VS Code open
		// ========================================
		{
			"label": "SLATEPI: Auto-Start Dashboard",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": ["${workspaceFolder}/agents/slate_dashboard_server.py"],
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": "Uvicorn running|Application startup complete|SLATEPI Dashboard"
				}
			},
			"presentation": {
				"reveal": "silent",
				"panel": "dedicated",
				"showReuseMessage": false
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "SLATEPI: Auto-Start Runner",
			"type": "shell",
			"command": "${workspaceFolder}/actions-runner/run.cmd",
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": "Listening for Jobs|Runner listener started|Running job"
				}
			},
			"presentation": {
				"reveal": "silent",
				"panel": "dedicated",
				"showReuseMessage": false,
				"group": "runner"
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},

		// ========================================
		// CORE SLATE CONTROLS
		// ========================================
		{
			"label": "SLATEPI: Status",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": ["${workspaceFolder}/slate/slate_status.py", "--quick"],
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},

		// ========================================
		// DASHBOARD & UI
		// ========================================
		{
			"label": "SLATEPI: Dashboard",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": ["${workspaceFolder}/agents/slate_dashboard_server.py"],
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "SLATEPI: Open Dashboard",
			"type": "process",
			"command": "cmd",
			"args": ["/c", "start", "http://localhost:8080"],
			"presentation": {
				"reveal": "never",
				"panel": "shared"
			},
			"problemMatcher": []
		},

		// ========================================
		// GITHUB RUNNER MANAGEMENT
		// ========================================
		{
			"label": "SLATEPI: Runner Start",
			"type": "shell",
			"command": "${workspaceFolder}/actions-runner/run.cmd",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"focus": true,
				"group": "runner"
			}
		},
		{
			"label": "SLATEPI: Runner Status",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": [
				"${workspaceFolder}/slate/slate_runner_manager.py",
				"--status"
			],
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "SLATEPI: Runner Stop",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy", "Bypass",
				"-Command", "Stop-Process -Name Runner.Listener -ErrorAction SilentlyContinue; Stop-Process -Name Runner.Worker -ErrorAction SilentlyContinue; Write-Host 'Runner stopped'"
			],
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},

		// ========================================
		// OLLAMA & AI
		// ========================================
		{
			"label": "SLATEPI: Ollama (Dual GPU)",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy", "Bypass",
				"-Command", "Stop-Process -Name ollama -ErrorAction SilentlyContinue; $env:OLLAMA_NUM_GPU='2'; ollama serve"
			],
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"focus": true
			}
		},

		// ========================================
		// RELEASE & PACKAGE MANAGEMENT
		// ========================================
		{
			"label": "SLATEPI: Release Status",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": [
				"${workspaceFolder}/slate/slate_release_runner.py",
				"--status"
			],
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "SLATEPI: Package Status",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": [
				"${workspaceFolder}/slate/slate_package_manager.py",
				"--status"
			],
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "SLATEPI: Package Validate",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": [
				"${workspaceFolder}/slate/slate_package_manager.py",
				"--validate"
			],
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "SLATEPI: Build Package",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": [
				"${workspaceFolder}/slate/slate_release_runner.py",
				"--build"
			],
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "SLATEPI: List Releases",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": [
				"${workspaceFolder}/slate/slate_release_runner.py",
				"--list-releases"
			],
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "SLATEPI: Publish Package",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": [
				"${workspaceFolder}/slate/slate_release_runner.py",
				"--publish"
			],
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		}
	]
}
